<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.intenttutorial.MainActivity">

    <EditText
        android:id="@+id/Ed_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="62dp"
        android:hint="Enter your Name here" />

    <EditText
        android:id="@+id/Ed_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Ed_Name"
        android:layout_below="@+id/Ed_Name"
        android:layout_marginTop="70dp"
        android:hint="Enter your Age here" />

    <EditText
        android:id="@+id/Ed_Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Ed_Age"
        android:layout_below="@+id/Ed_Age"
        android:layout_marginTop="84dp"
        android:hint="Enter your Class Here" />

    <Button
        android:id="@+id/E_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:text="Send" />



</RelativeLayout>